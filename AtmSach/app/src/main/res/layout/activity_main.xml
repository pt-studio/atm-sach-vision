<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_main_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:id="@+id/layout_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackGroundImage"
                    android:clickable="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_add_img1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_add_white_36dp"
                        android:clickable="false"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_add_img1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Ảnh mặt trước"
                        android:textColor="@color/colorAccent" />

                </RelativeLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_main_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:id="@+id/layout_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackGroundImage"
                    android:clickable="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_add_img2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_add_white_36dp"
                        android:clickable="false"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_add_img2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Ảnh mặt sau"
                        android:textColor="@color/colorAccent" />


                </RelativeLayout>
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_main_img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:id="@+id/layout_img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackGroundImage"
                    android:clickable="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_add_img3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/ic_add_white_36dp"
                        android:clickable="false"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_add_img3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Ảnh lưng sách"
                        android:textColor="@color/colorAccent" />


                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_main_img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:id="@+id/layout_img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackGroundImage"
                    android:clickable="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_add_img4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_add_white_36dp"
                        android:clickable="false"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_add_img4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="Ảnh mặt lật sách"
                        android:textColor="@color/colorAccent" />


                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Tìm kiếm và tính toán hư hại"
        android:textColor="@color/colorWhite">

    </Button>

</LinearLayout>
